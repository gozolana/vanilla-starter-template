{
  "name": "vanilla-starter-template",
  "version": "1.0.0",
  "description": "Starter template for vanilla typescript project",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "start": "node ./dist/main.js",
    "dev": "tsx ./src/main.ts",
    "clean": "node -e \"fs.promises.rm('./dist', {recursive: true, force: true})\"",
    "watch": "tsx watch ./src/main.ts",
    "build": "tsc",
    "test": "vitest",
    "test-coverage": "vitest --coverage",
    "lint-fix": "eslint --cache --fix ./src/ && prettier --write ./src/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vitest/coverage-v8": "^2.1.4",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
